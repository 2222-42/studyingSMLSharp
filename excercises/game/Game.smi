_require "basis.smi"
structure Game =
struct
  type pos = int * int
  datatype color = BLACK | WHITE
  type board (=list)
  type game = {board : board, next : color option}
  val init : game
  val boardSize: int
  val get : board -> pos -> color option
  val put : board -> pos -> color -> board
  val initBoard : board
  val step : game -> pos -> game option
  val play : pos list -> game option
end